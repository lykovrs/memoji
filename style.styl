.game
  background-color #cfd0cf
  min-width 640px
  min-height 600px
  margin 0
  padding 0
  color #434344

  &__header
      text-align center
      margin 40px 0
      font 42px/47px Arial, sans-serif
      display block
    &__body
      display grid
      grid-template-columns 130px 130px 130px 130px
      grid-template-rows 130px 130px 130px
      grid-column-gap 25px
      grid-row-gap 25px
      justify-content center
      perspective 600px

    &__item
      background #fff
      border 5px solid #fff
      border-radius 9px
      box-shadow 1px 1px 5px 0 rgba(0,0,0,0.5)
      font-size 75px
      display flex
      justify-content center
      align-items center
      position relative
      transition transform .5s
      transform-style preserve-3d
      cursor pointer

      &:after,
      &:before
        display block
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius 5px

      &:after
        background linear-gradient(45deg, #22ab93 0%,#19668d 100%)
        backface-visibility hidden

      &:before
        content attr(data-emoji)
        display flex
        align-items center
        justify-content center

      &_type_open
        transform rotateY(180deg)
