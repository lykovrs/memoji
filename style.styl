.modal
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  background rgba(#000, .5)
  align-items center
  justify-content center
  min-height inherit
  min-width inherit
  display flex

  &__container
    background #fff
    padding 70px
    text-align center
    min-width 30%

  &__message
    font 42px/47px Arial, sans-serif

  &__action
    border none
    background linear-gradient(45deg, #22ab93 0%,#19668d 100%)
    color #fff
    padding 20px 40px
    font 42px/47px Arial, sans-serif