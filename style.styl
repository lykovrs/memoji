.game
  background-color #cfd0cf
  color #434344
  margin 0
  min-height 600px
  min-width 640px
  padding 0

  &__header
    display block
    font 42px / 47px Arial, sans-serif
    margin 40px 0
    text-align center
  &__body
    display grid
    grid-column-gap 25px
    grid-row-gap 25px
    grid-template-columns 130px 130px 130px 130px
    grid-template-rows 130px 130px 130px
    justify-content center
    perspective 600px

  &__item
    align-items center
    background #fff
    border 5px solid #fff
    border-radius 9px
    box-shadow 1px 1px 5px 0 rgba(0, 0, 0, 0.5)
    cursor pointer
    display flex
    font-size 75px
    justify-content center
    position relative
    transform-style preserve-3d
    transition transform .5s

    &:after,
    &:before
      border-radius 5px
      bottom 0
      content ''
      display block
      left 0
      position absolute
      right 0
      top 0

    &:after
      backface-visibility hidden
      background linear-gradient(45deg, #22ab93 0%, #19668d 100%)

    &:before
      align-items center
      content attr(data-emoji)
      display flex
      justify-content center

    &_type_open
      transform rotateY(180deg)

    &_round_success
      background-color #5ad66f
      border-color #5ad66f
      cursor auto
      transition background-color 1s, border-color 1s
    &_round_error
      background-color #f44336
      border-color #f44336
      transition background-color 1s, border-color 1s

  &__timer
    display block
    font 32px / 36px Arial, sans-serif
    margin-top 30px
    text-align center

.modal
  align-items center
  background rgba(#000, .5)
  bottom 0
  display none
  justify-content center
  left 0
  min-height inherit
  min-width inherit
  position absolute
  right 0
  top 0

  &_type_open
    display flex

  &__container
    background #fff
    box-sizing border-box
    min-width 350px
    padding 30px
    text-align center

  &__message
    font bold 48px / 48px Arial, sans-serif
    margin 0

    & span
      animation: squish 1s cubic-bezier(0.30, 2.40, 0.85, 2.50) infinite
      display inline-block
    & span:nth-child(1)
      animation-delay .3s
      text-transform uppercase
    & span:nth-child(2)
      animation-delay .6s
      transform translateY(-5px)
    & span:nth-child(3)
      animation-delay .9s
      transform translateY(-7px)
    & span:nth-child(4)
      animation-delay .12s
      transform translateY(-9px)

  &__action
    background linear-gradient(45deg, #19668d 0%, #22ab93 100%)
    border none
    border-radius 10px
    box-shadow 1px 1px 1px 0 rgba(0, 0, 0, 0.5)
    color #fff
    font 20px / 40px Arial, sans-serif
    margin-top 40px
    padding 0 30px

    &:active
      box-shadow inset 1px 1px 8px 0 rgba(0, 0, 0, 0.5)

@keyframes squish
  0%
    transform scale(1, 1), translateY(0px)
  100%
    transform scale(1, 1.2) translateY(-10px)
  100%
    transform scale(1, 1), translateY(0px)
